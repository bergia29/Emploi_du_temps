<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="260.0" prefWidth="422.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.isep.algo.gestionemploisdutemps.HelloController">

    <!-- Haut : Sélecteur de langue à gauche, Titre à droite -->
    <top>
        <HBox alignment="CENTER" spacing="20">
            <ComboBox fx:id="languageSelector" onAction="#handleLanguageChange">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Français" />
                        <String fx:value="Anglais" />
                    </FXCollections>
                </items>
            </ComboBox>

            <Region fx:id="spacer" prefWidth="400" /> <!-- Permet d'espacer les éléments -->

            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="ISEP 2024-2025" textFill="#250ad8" />
        </HBox>
    </top>

    <!-- Centre : Boutons alignés -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <HBox spacing="10">
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@admin.png" />
                    </image>
                </ImageView>
                <Button fx:id="adminButton" onAction="#handleAdmin" text="Administrateur" />
            </HBox>

            <HBox spacing="10">
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@student.png" />
                    </image>
                </ImageView>
                <Button fx:id="studentButton" onAction="#handleStudent" text="Étudiants" />
            </HBox>

            <HBox spacing="10">
                <ImageView fitHeight="30" fitWidth="30">
                    <image>
                        <Image url="@teacher.png" />
                    </image>
                </ImageView>
                <Button fx:id="teacherButton" onAction="#handleTeacher" text="Enseignants" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
