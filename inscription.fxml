<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.isep.algo.gestionemploisdutemps.InscriptionController">

    <Label text="Inscription" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TextField fx:id="nomField" promptText="Nom"/>
    <TextField fx:id="prenomField" promptText="Prénom"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"/>

    <ComboBox fx:id="roleSelector">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Administrateur"/>
                <String fx:value="Étudiant"/>
                <String fx:value="Enseignant"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button text="S'inscrire" onAction="#handleRegister"/>
    <Hyperlink text="Retour à la connexion" onAction="#goToLogin"/>
</VBox>
