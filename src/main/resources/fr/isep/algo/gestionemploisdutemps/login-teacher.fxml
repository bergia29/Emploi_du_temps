<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.isep.algo.gestionemploisdutemps.LoginTeacherController">

    <Label text="Connexion - Enseignants" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"/>

    <Button text="Se connecter" onAction="#handleLogin"/>
    <Hyperlink text="Vous n'avez pas de compte ? Inscrivez-vous" onAction="#goToRegister"/>
</VBox>
